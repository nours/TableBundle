<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nours_table.table_factory.class">Nours\TableBundle\Factory\TableFactory</parameter>
        
        <parameter key="nours_table.table_field.text.class">Nours\TableBundle\Field\Type\TextType</parameter>
        <parameter key="nours_table.table_field.boolean.class">Nours\TableBundle\Field\Type\BooleanType</parameter>
        <parameter key="nours_table.table_field.date.class">Nours\TableBundle\Field\Type\DateType</parameter>
        <parameter key="nours_table.table_field.label.class">Nours\TableBundle\Field\Type\LabelType</parameter>

        <parameter key="nours_table.twig.table_renderer.class">Nours\TableBundle\Twig\Table\TwigRenderer</parameter>
        <parameter key="nours_table.twig.table_extension.class">Nours\TableBundle\Twig\Extension\TableExtension</parameter>
    </parameters>

    <services>
        <!-- Factory -->
        <service id="nours_table.table_factory" class="%nours_table.table_factory.class%">
        </service>
        
        <!-- Field types -->
        <service id="nours_table.table_field.text" class="%nours_table.table_field.text.class%">
        	<tag name="nours_table.table_field" />
        </service>
        <service id="nours_table.table_field.boolean" class="%nours_table.table_field.boolean.class%">
            <tag name="nours_table.table_field" />
        </service>
        <service id="nours_table.table_field.date" class="%nours_table.table_field.date.class%">
            <tag name="nours_table.table_field" />
        </service>
        <service id="nours_table.table_field.label" class="%nours_table.table_field.label.class%">
            <tag name="nours_table.table_field" />
        </service>
        
        <!-- Renderer -->
        <service id="nours_table.twig.table_renderer" class="%nours_table.twig.table_renderer.class%">
        	<argument>%nours_table.table_template%</argument>
        </service>
        
        <!-- Extension -->
        <service id="nours_table.twig.table_extension" class="%nours_table.twig.table_extension.class%">
            <argument type="service" id="nours_table.twig.table_renderer" />
           	<tag name="twig.extension" />
        </service>
    </services>
</container>
